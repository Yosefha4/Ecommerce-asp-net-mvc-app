@model Actor

@{
    ViewData["Title"] = "Update Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2 d-flex flex-column gap-3">
                <form asp-action="Edit">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                    <div class="form-group text-center">
                        <img id="ProfileImgPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for="ProfileImgUrl"></label>
                        <input asp-for="ProfileImgUrl" class="form-control" />
                        <span asp-validation-for="ProfileImgUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Bio"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfileImgPreview');
            output.src = $("#ProfileImgUrl").val();
        })

        $("#ProfileImgUrl").on("change", function () {
            var output = document.getElementById('ProfileImgPreview');
            output.src = $(this).val();
        })
    </script>
}