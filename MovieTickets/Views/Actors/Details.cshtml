@model Actor

@{
    ViewData["Title"] = "Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2 d-flex flex-column gap-3">


                    <div class="form-group text-center">
                        <img id="ProfileImgPreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for="ProfileImgUrl"></label>
                        <input asp-for="ProfileImgUrl" class="form-control" readonly />
                        <span asp-validation-for="ProfileImgUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control"  readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Bio"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-success float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
              
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfileImgPreview');
            output.src = $("#ProfileImgUrl").val();
        })

       
    </script>
}